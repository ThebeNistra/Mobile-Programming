<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tableLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.fatima.betterbudget.UserAreaActivity">

    <!-- 2 columns -->

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView1"
            android:text="Income"
            android:textAppearance="?android:attr/textAppearanceLarge"
            tools:ignore="HardcodedText"/>
    </TableRow>
    <Button
        android:id="@+id/Incomebutton"
        android:layout_width="185dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:background="@drawable/income"/>

    <TableRow>
        <TextView
            android:id="@+id/textView2"
            android:text="Expenses"
            android:textAppearance="?android:attr/textAppearanceLarge"
            tools:ignore="HardcodedText" />

    </TableRow>
    <Button
        android:id="@+id/Spendingbutton"
        android:layout_width="185dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:background="@drawable/spending"/>


    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView3"
            android:text="Profile"
            android:textAppearance="?android:attr/textAppearanceLarge"
            tools:ignore="HardcodedText"/>


    </TableRow>

    <Button
        android:id="@+id/Profilebutton"
        android:layout_width="185dp"
        android:layout_height="80dp"
        android:background="@drawable/profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <!-- edittext span 2 column -->
    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView4"
            android:text="Records"
            android:textAppearance="?android:attr/textAppearanceLarge"
            tools:ignore="HardcodedText" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        </TableRow>
        <Button
            android:id="@+id/PieChartButton"
            android:layout_width="185dp"
            android:layout_height="80dp"
            android:background="@drawable/piechart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />






        <Button
            android:id="@+id/logout"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Log Out"
            android:textAlignment="center" />





</TableLayout>
